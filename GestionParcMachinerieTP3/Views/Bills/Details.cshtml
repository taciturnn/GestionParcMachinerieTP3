@model GestionParcMachinerieTP3.Models.Bill

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (User.IsInRole("Admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.UserId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserId)
            </dd>
        }
        <dt>
            Client
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Paid)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Paid)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt>
            Commands
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Model</th>
                    <th>Rent price</th>
                </tr>
                @foreach (var item in Model.BillCommands)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Command.Machine.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Command.Machine.RentPrice)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
